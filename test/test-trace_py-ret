# test/test-trace_py -- test for trace_py using match and *.match files
#

# follow-fork option
if [ "$1" == "-f" ]; then
	echo "ERROR: follow-fork is not supported"
	exit 1
fi

if [ "$2" == "" ]; then
	echo "Usage: $0 <test-file> <test-number>"
	exit 1
fi

TEST_NUM=$2
TEST_FILE=$1
if [ ! -x $TEST_FILE ]; then
	echo "Error: executable file '$TEST_FILE' does not exist"
	exit 1
fi

TEST_DIR=$(dirname $0)
[ "$TEST_DIR" == "." ] && TEST_DIR=$(pwd)

FUNCT=$TEST_DIR/helper_functions.sh
COMMON=$TEST_DIR/common.sh
[ ! -f $COMMON -o ! -f $FUNCT ] \
	&& echo "Error: one of files is missing: $COMMON or $FUNCT" \
	&& exit 1

source $COMMON
source $FUNCT

PATTERN_START='close *12345678'
PATTERN_END='close *87654321'
OUT=output-$TEST_NUM.log
OUT_BARE=output-bare-$TEST_NUM.log
OUT_SORT=output-sort-$TEST_NUM.log

OPT_TRACE_PY="-t \
'sys_close \"%llx\", arg1' \
'r::sys_open \"%llx %s %llx\", retval, arg2, arg1' \
'r::sys_write \"%llx %llx %llx\", retval, arg1, arg2' \
'r::sys_read \"%llx %llx %llx\", retval, arg1, arg2' \
'r::sys_futex \"%llx %llx %llx\", retval, arg1, arg2' \
'r::sys_poll \"%llx %llx %llx\", retval, arg1, arg2' \
'r::sys_ppoll \"%llx %llx %llx\", retval, arg1, arg2' \
'r::sys_select \"%llx %llx %llx\", retval, arg1, arg2' \
'r::sys_pselect6 \"%llx %llx %llx\", retval, arg1, arg2' \
'r::sys_epoll_wait \"%llx %llx %llx\", retval, arg1, arg2' \
'r::sys_epoll_pwait \"%llx %llx %llx\", retval, arg1, arg2' \
"

TRACE_PY=`which trace`
[ ! -x $TRACE_PY ] \
	&& echo "Error: executable file '$TRACE_PY' does not exist - bcc's trace.py is not installed" \
	&& exit 1

require_superuser
set +e
sudo killall trace  2>/dev/null
sudo killall python 2>/dev/null
sudo bash -c "while ! echo 0 > /sys/kernel/debug/tracing/tracing_on;  do date > /dev/null; done"
sudo bash -c "while ! echo > /sys/kernel/debug/tracing/kprobe_events; do date > /dev/null; done" 2>/dev/null
set -e

# remove all logs of the current test
rm -f *-$TEST_NUM.log

# run tests
echo "# WAIT_TRACE_PY=1 $TEST_FILE $TEST_NUM >/dev/null &"
WAIT_TRACE_PY=1 $TEST_FILE $TEST_NUM >/dev/null &

TEST_PID=$!

RUN_TRACE_PY="ulimit -l 10240 && ulimit -n 10240 && stdbuf -o L $TRACE_PY -p $TEST_PID ${OPT_TRACE_PY}"

echo "# sudo bash -c \"$RUN_TRACE_PY\" >$OUT 2>&1 &"
sudo bash -c "$RUN_TRACE_PY" >$OUT 2>&1 &
TRACE_PID=$!

sleep 3

kill -CONT $TEST_PID

sleep 1

wait $TEST_PID

sleep 1

set +e
sudo kill -INT $TRACE_PID
sudo killall -INT trace
sudo killall -INT python

grep -v -e 'PID.*TID' -e "$OUT" $OUT > $OUT_BARE
[ $? -ne 0 ] && echo "Error: grep"
set -e

# tests without fork()
sort $OUT_BARE -o $OUT_SORT

cut_part_file $OUT_SORT "$PATTERN_START" "$PATTERN_END" |  cut -d'y' -f2 | cut -c3- > tracepy-ret-$TEST_NUM.log

# echo "-------------------------------------"
# cat tracepy-ret-$TEST_NUM.log
# echo "-------------------------------------"

check_py_ret
